@using ProjetFinal_2236734.ViewModels
@model ProjetFinal_2236734.ViewModels.ImageUploadVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Images</h1>

<div>
    <h4>Tournoi</h4>
    <hr />
    <h6>Ajouter une image au tournois @Model.Tournois.Nom</h6>

    <form asp-action="Image" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="FormFile" class="control-label"></label>
            <input asp-for="FormFile" type="file" accept="image/*" class="form-control-file" />
            <span asp-validation-for="FormFile" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Téléverser" class="btn btn-primary" />
        </div>
    </form>
</div>

<hr />
<h5>Images de @Model.Tournois.Nom</h5>
@foreach (ImageViewModel img in ViewBag.Images)
{
    <img src="@img.ImageUrl"/>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>
